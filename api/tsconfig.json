{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "outDir": "./dist",
    "paths": {
      "@api/*": ["src/*"]
    },
    "strict": true,
    "sourceMap": true,
    "target": "es6"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", ".vscode"]
}
